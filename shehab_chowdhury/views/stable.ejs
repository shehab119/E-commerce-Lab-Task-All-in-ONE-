<!DOCTYPE html>
<html lang="en">
<head>
  <title>Student Database Table</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <style>
      h3{
          color: blue;
          font-style: italic;
      
      }
      h2{
          color: red;
          background-color: black;
      }
      h1{
          background-color: yellowgreen;
      }
      
      body{
          margin: 0;
          padding: 0;
      }
      #no{
        background-color: black;
        color:blue;
      }
      #na{
        background-color: black;
        color: orangered;
      }
      
      </style>
</head>
<body>
    
    <a href="/student"><button type="submit" class="btn btn-warning">Add More Into Student Databases </button></a>
    <a href="/"><button type="submit" class="btn btn-success">Home</button></a>
    <a href="/task4"><input type="submit" value="Cancel" class="btn btn-danger"> </a>
    <hr>
    <form action="/stable" method="POST">

      <h3>university_db</h3>
  <p>DBs "university_db", Table Name "students":</p>
<div class="container">            
  <table class="table table-bordered">
    <thead id="no">
      <tr>
          <th>NO</th>
        <th>ID</th>
        <th>NAME</th>
        <th>DEPARTMENT</th>
        <th>AGE</th>
        <th>CONTRACT_NUMBER</th>
      
      </tr>
    </thead>
    <tbody id = "na"> <% for(var i=0; i < info.length; i++) { %>
      <tr>
          <td># <%= (i+1) %></td>
          <td><%= info[i].stdid %></td>
           <td><%= info[i].stdname %></td>
           <td><%= info[i].stddpt %></td>
           <td><%= info[i].stdage %></td>
           <td><%= info[i].stdcn %></td>
      </tr>
  <% } %>
     
    </tbody>
  </table>
</div>
</form>
</body>
